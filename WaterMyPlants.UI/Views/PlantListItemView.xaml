<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WaterMyPlants.UI.ViewModels"
             x:DataType="vm:PlantListItemViewModel"
             x:Class="WaterMyPlants.UI.Views.PlantListItemView">

    <Frame>
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding SelectItemCommand}"/>
        </Frame.GestureRecognizers>
        <VerticalStackLayout>
            <Label Text="{Binding Name}"/>
            <Label Text="{Binding Localization}"/>
            <Label Text="{Binding DaysRemaining, StringFormat='Za {0} dni'}" />

            <Grid IsVisible="{Binding IsSelected}"
                                  RowDefinitions="Auto,Auto, Auto"
                                  Padding="6"
                                  Margin="4,8,4,0">
                <Label Text="{Binding Description}"/>
                <Label Grid.Row="1" Text="{Binding LastNote}" />
                <Button Grid.Row="2"
                        Text="WiÄ™cej..."
                        HorizontalOptions="End"
                        Command="{Binding MoreInfoCommand}"/>
            </Grid>
        </VerticalStackLayout>
    </Frame>
</ContentView>
